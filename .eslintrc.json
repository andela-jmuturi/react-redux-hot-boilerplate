{
  "extends": "airbnb",
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "comma-dangle": [
      "error",
      "never"
    ],
    "no-underscore-dangle": [
      "error",
      { "allow": ["_id"] }
    ],
    "no-param-reassign": [
      "error",
      { "props": false }
    ],
    "jsx-quotes": [
      "error",
      "prefer-single"
    ],
    "no-shadow": [
      "error",
      { "hoist": "never" }
    ]
  }
}
